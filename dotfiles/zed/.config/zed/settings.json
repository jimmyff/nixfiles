{
  "agent": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-thinking"
    },
    "play_sound_when_agent_done": false,
    "use_modifier_to_send": true
  },
  "agent_servers": {},
  "auto_install_extensions": {
    "dart": true,
    "spiceflow-theme": true,
    "nix": true
  },
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 14,
  "relative_line_numbers": true,
  "inlay_hints": {
    "enabled": true
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "delay_ms": 1500
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "theme": "Ayu Dark",
  "ui_font_family": "JetBrainsMono Nerd Font",
  "ui_font_size": 14,
  "vim_mode": true,

  // I like my ide to be super clear where my focus is (WIP)
  // Colors inspired by Modus Vivendi Tinted:
  // https://github.com/protesilaos/modus-themes/blob/main/modus-vivendi-tinted-theme.el
  "experimental.theme_overrides": {
    "editor.background": "#0d0e1c",
    "scrollbar.thumb.background": "#1d2235",
    "editor.gutter.background": "#0d0e1c",
    "editor.active_line.background": "#004065",
    "background": "#1d223d",
    "panel.background": "#1d2235",
    "text": "#fff",
    "text.muted": "#c6daff99",
    "panel.indent_guide": "#4a4f69",
    "border": "#00000099",
    "toolbar.background": "#1d2235",
    "border.focused": "#f00",
    "editor.active_line_number": "#efef00",
    "tab_bar.background": "#1d2235",
    "tab.inactive_background": "#1d223d",

    "players": [
      {
        "cursor": "#ff66ff",
        "background": "#7030af",
        "selection": "#7030af"
      }
    ],
    "tab.active_background": null
    // "panel.focused_border": "#333"

    // "syntax": {
    //   "comment": {
    //     "font_style": "italic"
    //   },
    //   "comment.doc": {
    //     "font_style": "italic"
    //   }
    // }
  }
}
