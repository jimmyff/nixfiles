// Test Place your key bindings in this file to overwrite the defaults
[
    // Keybindings for Navigation
    {
        "key": "cmd+alt+k",
        "command": "workbench.action.navigateUp"
    },
    {
        "key": "cmd+alt+j",
        "command": "workbench.action.navigateDown"
    },
    {
        "key": "cmd+alt+h",
        "command": "workbench.action.navigateLeft"
    },
    {
        "key": "cmd+alt+l",
        "command": "workbench.action.navigateRight"
    },
    // panels
    {
        "key": "cmd+alt+h",
        "command": "workbench.action.previousPanelView",
        "when": "panelFocus"
    },
    {
        "key": "cmd+alt+l",
        "command": "workbench.action.nextPanelView",
        "when": "panelFocus"
    },
    // tabs
    {
        "key": "cmd+ctrl+h",
        "command": "workbench.action.previousEditorInGroup",
        "when": "editorFocus"
    },
    {
        "key": "cmd+ctrl+l",
        "command": "workbench.action.nextEditorInGroup",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+w",
        "command": "workbench.action.closeActiveEditor",
        "when": "editorFocus"
    },
    
    // sidebar
    {
        "key": "ctrl+k",
        "command": "workbench.files.action.focusOpenEditorsView",
        "when": "sideBarFocus && explorerViewletVisible"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.files.action.focusFilesExplorer",
        "when": "sideBarFocus && explorerViewletVisible && !filesExplorerFocus"
    },
    {
        "key": "shift+enter",
        "command": "workbench.action.terminal.sendSequence",
        "args": {
            "text": "\\\r\n"
        },
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+g ctrl+w",
        "command": "jump-extension.jump-to-the-start-of-a-word",
        "when": "editorTextFocus"
    }
]